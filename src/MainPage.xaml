<Page
    x:Class="WebSM.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebSM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="971" Width="1827">

    <Grid>
        <!-- WebBrowser -->
        <WebView x:Name="WebView" Source="https://www.whatismybrowser.com" Margin="40,0,0,40"/>

        <!-- Navigation bars -->
        <CommandBar x:Name="CommandBar"
                    VerticalAlignment="Bottom">
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="BackButton" Visibility="Collapsed" Icon="Back" Label="Go Back"/>
            <AppBarButton x:Name="ForwardButton" Visibility="Collapsed" Icon="Forward" Label="Go Forward"/>
            <AppBarButton x:Name="RefreshButton" Visibility="Collapsed" Icon="Refresh" Label="Refresh"/>
            <AppBarButton Icon="Add" Label="Add a new Social Media"/>
            <AppBarButton Icon="Delete" Label="Remove the current Social Media"/>
        </CommandBar>
        <NavigationView PaneDisplayMode="LeftCompact"
                        x:Name="NavigationViewControl"
                        PaneTitle="WebSM">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="YouTube" x:Name="YouTube" Icon="Globe"/>
            </NavigationView.MenuItems>
        </NavigationView>
    </Grid>
</Page>

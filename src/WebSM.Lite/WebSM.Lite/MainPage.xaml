<Page
    x:Class="WebSM.Lite.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebSM.Lite"
    xmlns:utu="using:Uno.Toolkit.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="Auto"
    Width="Auto"
    Loaded="Page_Loaded">

    <Grid>
        <!--Navigation bars-->
        <NavigationView x:Name="navView" PaneDisplayMode="LeftCompact" PaneTitle="WebSM"
                        IsPaneOpen="False" x:FieldModifier="public" IsBackEnabled="True"
                        BackRequested="navView_BackRequested"
                        SelectionChanged="navView_SelectionChanged">
        </NavigationView>
        <!-- WebBrowser -->
        <WebView2 x:Name="webView2" x:FieldModifier="public" Margin="48,0,0,48"
                  NavigationStarting="webView2_NavigationStarting"
                  NavigationCompleted="webView2_NavigationCompleted"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Source="https://eu.startpage.com/"/>
        <ProgressRing x:Name="progressRing" IsActive="False" Background="Transparent" Margin="48,0,0,48"/>
        <CommandBar x:Name="commandBar"
                    VerticalAlignment="Bottom"
                    DefaultLabelPosition="Bottom"
                    OverflowButtonVisibility="Collapsed"
                    IsEnabled="True">
            <AppBarButton x:Name="homeButton" Icon="Home" Click="homeButton_Click"/>
            <AppBarButton x:Name="searchButton" Icon="Find" Click="searchButton_Click"/>
            <AppBarButton x:Name="backButton" Icon="Back" Click="backButton_Click"/>
            <AppBarButton x:Name="forwardButton" Icon="Forward" Click="forwardButton_Click"/>
            <AppBarButton x:Name="refreshButton" Icon="Refresh" Click="refreshButton_Click"/>
        </CommandBar>

        <!-- Settings -->
        <SplitView x:Name="settingsView" DisplayMode="Overlay" OpenPaneLength="296" PanePlacement="Right">
            <SplitView.Pane>
                <StackPanel>
                    <TextBlock x:Uid="SettingTitle" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Settings" VerticalAlignment="Top" FontWeight="Bold" FontSize="36"/>
                    <TextBlock x:Uid="SelectedTheme" Text="Selected theme" FontSize="18" Margin="10,20,0,0"/>
                    <ComboBox x:Name="comboBox1" x:FieldModifier="public" Width="269" Margin="10,10,0,0" SelectedIndex="0" SelectionChanged="comboBox_SelectionChanged">
                        <TextBlock x:Name="defaultTheme" x:Uid="defaultTheme" Text="Default theme (System based)"/>
                        <TextBlock x:Name="lightTheme" x:Uid="lightTheme" Text="Light Theme"/>
                        <TextBlock x:Name="darkTheme" x:Uid="darkTheme" Text="Dark Theme"/>
                    </ComboBox>
                    <TextBlock x:Uid="ExtrasText" Text="Extras" Margin="10,10,0,0"  FontSize="18"/>
                    <Button x:Name="AboutButton" x:Uid="AboutButton" Click="AboutButton_Click" Margin="10,10,0,0"/>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>

<Page
    x:Class="WebSM.OfflinePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebSM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="It looks like you are offline." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" />
        <TextBlock Text="- Check if you are connected to a network." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <TextBlock Text="- Check your network configuration." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
    </StackPanel>
</Page>

<Page
    x:Class="WebSM.BrowserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebSM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid>
        <!-- WebBrowser -->
        <TabView x:Name="tabView" AddTabButtonClick="TabView_AddButtonClick" 
                  TabCloseRequested="TabView_TabCloseRequested" 
                  Loaded="TabView_Loaded" VerticalAlignment="Stretch"
                  SelectionChanged="tabView_SelectionChanged" IsEnabled="True">
        </TabView>
        <ProgressRing x:Name="progressRing" IsActive="False"/>
    </Grid>
</Page>
